{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true, 
    "noImplicitReturns": true,               
    "noFallthroughCasesInSwitch": true,      
    "sourceMap": true,                       
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}